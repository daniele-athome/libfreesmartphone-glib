<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node name="/">
    <interface name="org.freesmartphone.Notifications">
        <proxy type="static" path="/org/freesmartphone/Usage/Notifications"/>
        <method name="Notify">
            <annotation name="org.freedesktop.DBus.GLib.Async" value="true"/>
            <!-- A registered notification type -->
            <arg type="s" name="type" direction="in" />
            <!-- Text to be displayed on front page (ie status bar) -->
            <arg type="s" name="ticker" direction="in" />
            <!-- Title of notification (ie first row of notification list item) -->
            <arg type="s" name="title" direction="in" />
            <!-- Text of notification (ie second row of notification list item) -->
            <arg type="s" name="text" direction="in" />
            <!-- -1 for no timestamp (e.g. for ongoing) -->
            <arg type="i" name="timestamp" direction="in" />
            <!-- various flags:
                DONT_PUSH - Don't push notification to the front page
                SHOW_ON_RESUME - Show the notification on the front page on resume
                INSISTENT - Repeat audio and/or vibration until notification is deleted or read
                ONGOING - Ongoing event
                NO_CLEAR - Don't delete the notification on clear all
                AUTODEL - Delete notification automatically on click
              -->
            <arg type="i" name="flags" direction="in" />
            <!-- TODO audio, vibrate, leds -->
            <!-- return -->
            <arg type="i" name="id" direction="out" />
        </method>
        <method name="Update">
            <annotation name="org.freedesktop.DBus.GLib.Async" value="true"/>
            <!-- An existant notification id -->
            <arg type="i" name="id" direction="in" />
            <!-- Text to be displayed on front page (ie status bar) -->
            <arg type="s" name="ticker" direction="in" />
            <!-- Title of notification (ie first row of notification list item) -->
            <arg type="s" name="title" direction="in" />
            <!-- Text of notification (ie second row of notification list item) -->
            <arg type="s" name="text" direction="in" />
            <!-- -1 for no timestamp update -->
            <arg type="i" name="timestamp" direction="in" />
            <!-- TODO audio, vibrate, leds -->
        </method>
        <method name="Cancel">
            <!-- cancel a running notification -->
            <annotation name="org.freedesktop.DBus.GLib.Async" value="true"/>
            <arg type="i" name="id" direction="in" />
        </method>
        <method name="CancelAll">
            <!-- cancel all running notifications -->
            <annotation name="org.freedesktop.DBus.GLib.Async" value="true"/>
        </method>
        <method name="RegisterType">
            <!-- register a notification type -->
            <annotation name="org.freedesktop.DBus.GLib.Async" value="true"/>
            <arg type="s" name="type" direction="in" />
            <arg type="s" name="icon" direction="in" />
            <!-- Defines the title to be used if notifications for this type are
                 more than one and their titles are different.
                 -->
            <arg type="s" name="multititle" direction="in" />
            <!-- When using multititle use sprintf() and pass number of
                 notifications of this type -->
            <arg type="b" name="multititle_count" direction="in" />
            <!-- Defines the text to be used if notifications for this type are
                 more than one and their texts are different.
                 -->
            <arg type="s" name="multitext" direction="in" />
            <!-- When using multitext use sprintf() and pass number of
                 notifications of this type -->
            <arg type="b" name="multitext_count" direction="in" />
        </method>
    </interface>
    <fso:enumeration xmlns:fso="http://www.freesmartphone.org/schemas/DBusSpecExtension" type="i"
            name="org.freesmartphone.Notifications.NotificationFlags" interface="org.freesmartphone.Notifications">
        <fso:member name="none" value="0"/>
        <fso:member name="dont-push" value="1"/>
        <fso:member name="show-on-resume" value="1 &lt;&lt; 1"/>
        <fso:member name="insistent" value="1 &lt;&lt; 2"/>
        <fso:member name="ongoing" value="1 &lt;&lt; 3"/>
        <fso:member name="no-clear" value="1 &lt;&lt; 4"/>
        <fso:member name="autodel" value="1 &lt;&lt; 5"/>
    </fso:enumeration>
</node>
